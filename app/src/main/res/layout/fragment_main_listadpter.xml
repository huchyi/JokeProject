<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_s"
    android:paddingBottom="@dimen/activity_vertical_margin_s"
    android:background="@color/main_fragment_bg_while">

    <TextView
        android:id="@+id/list_tv"
        android:layout_marginTop="3dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_middle_select_round"
        android:textSize="17dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"/>
    <TextView
        android:id="@+id/list_time_tv"
        android:layout_below="@+id/list_tv"
        android:layout_marginBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:layout_marginRight="5dip"
        android:textSize="14dip"/>

</RelativeLayout>