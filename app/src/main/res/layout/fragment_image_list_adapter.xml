<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin_s"
    android:background="@color/main_fragment_bg_while">

    <LinearLayout
        android:id="@+id/list_content_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_middle_select_round"
        android:paddingLeft="20dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_tv_title"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textIsSelectable="true"
            android:singleLine="true"
            android:textSize="18dip"
            />
        <TextView
            android:layout_marginTop="10dip"
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="#bbbbbb"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            />

        <TextView
            android:id="@+id/list_tv"
            android:layout_marginTop="10dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textIsSelectable="true"
            android:textSize="17dip"
            />
        <ImageView
            android:id="@+id/fragment_list_image_content"
            android:layout_marginTop="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_below="@+id/list_content_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_item_collection_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uncollection_img"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/list_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:layout_marginRight="8dip"
            android:textSize="14dip"
            />
    </RelativeLayout>
</RelativeLayout>